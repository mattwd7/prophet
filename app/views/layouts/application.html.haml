<!DOCTYPE html>
%html
  %head
    %title Prophet
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
  %body
    #banner
      .logo
        Prophet
      - if current_user
        #session
          .avatar
            = image_tag current_user.avatar.url(:large)

        .sort
          -if @my_feedbacks && @my_feedbacks.count > 0
            .me.selected Me
            .team Team
          - else
            .me Me
            .team.selected Team
          .bar
      - else
        = form_for :user, url: session_path(:user), html: { id: 'sign-in' } do |f|
          .email
            = f.label 'Email'
            = f.text_field :email
            .rememberable
              = f.check_box :remember_me
              = 'Keep me logged in'
          .password
            = f.label 'Password'
            = f.password_field :password
            = link_to 'Forgot your password?'
          .submit-tag{ 'tabindex' => 0 } Log in

    #error-messages
    #warning-messages

    .full
      %p.errors= flash[:error]
      %p.notices= flash[:notice]
      = yield

    .footer
      %ul.business-links
        %li= link_to 'Terms and Conditions'
        %li= link_to 'Privacy Policy'
        %li= link_to 'Data Policy'
        %li= link_to 'Help'
        %li= link_to 'Careers'

  - if current_user
    .popover#session-options
      .name= current_user.full_name
      %li= link_to 'Edit Profile', edit_user_path(current_user)
      %hr
      %li= link_to 'Logout', destroy_user_session_path, method: :delete