<!DOCTYPE html>
%html
  %head
    %title Prophet
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
  %body{ class: "#{controller_name} #{action_name}" }
    #banner
      .logo
        = link_to 'Prophet', index_path
      - if current_user
        .session{ id: current_user.id }
          .avatar
            = image_tag current_user.avatar.url(:large)

        .sort
          -if @my_feedbacks && @my_feedbacks.count > 0
            .me.selected Me
            .team Team
          - else
            .me Me
            .team.selected Team
          - if current_user.type == 'Manager'
            .manager Manager
          - if current_user.type == 'Admin'
            .admin Admin
          .bar
      - else
        = form_for :user, url: session_path(:user), html: { id: 'sign-in' } do |f|
          .email
            = f.label 'Email'
            = f.text_field :email
            .rememberable
              = f.check_box :remember_me, tabindex: -1
              = 'Keep me logged in'
          .password
            = f.label 'Password'
            = f.password_field :password
            = link_to 'Forgot your password?', nil, tabindex: -1
          .submit-tag.active{ 'tabindex' => 0 } Log in

    #error-messages
    #warning-messages

    .full
      -#%p.errors= flash[:error]
      -#%p.notices= flash[:notice]
      = yield

  - if current_user
    .popover#session-options
      .name= current_user.full_name
      %li= link_to 'Edit Profile', edit_user_path(current_user)
      %hr
      %li= link_to 'Logout', destroy_user_session_path, method: :delete