.column#left
  .feedback-summary.filters
    %h2 Resonance
    %ul
      %li
        .description Resonant
        .number-bubble#resonant= @my_feedbacks.resonant.count
      %li
        .description Mixed
        .number-bubble#mixed= @my_feedbacks.mixed.count
      %li
        .description Isolated
        .number-bubble#isolated= @my_feedbacks.isolated.count
    %h2 Requests sent to me
    %ul
      %li
        Unresolved
        .number-bubble
          30

  .profile
    .banner
    %table.data
      %tr
        %td
          .avatar
            = image_tag current_user.avatar.url(:large)
        %td
          .name= "#{current_user.first_name} #{current_user.last_name}"
          .title Software Engineer
    .status.editable{ 'data-action' => user_url(current_user) }
      = current_user.bio



.column#middle
  #filter-tags
    .resonance-tags
      -#= render partial: 'feedbacks/filter_tag', locals: { text: 'Resonant' }
    .attribute-tags
      -#= render partial: 'feedbacks/filter_tag', locals: { text: '#leadership' }

  = render partial: 'feedbacks/form'

  #feedbacks
    = render partial: 'feedbacks/index', locals: { my_feedbacks: @my_feedbacks, team_feedbacks: @team_feedbacks }



.column#right
  .attributes.filters
    %h2 Attributes
    %ul
      - @tags.each do |tag_name, count|
        %li
          .description= tag_name
          .number-bubble= count