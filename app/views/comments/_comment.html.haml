- hidden ||= nil
- fresh = comment.fresh?(current_user)
.comment{ id: "comment-#{comment.id}", style: hidden ? 'display:none' : 'display:block', class: fresh ? 'fresh' : '' }
  %table
    %tr
      %td
        .avatar
          = image_tag comment.user.avatar.url(:large)
        %td
          .content
            %span.author= comment.user.full_name
            %span= simple_format(comment.content)
          .data
            .timestamp
              = "#{time_ago_in_words(comment.created_at)} ago"
            -#.score
            -#  .flavor= flavor_text(comment)
            -#  .votes{ class: comment.feedback.user != current_user  && current_user.is_peer?(comment.feedback) && comment.user != current_user ? 'active' : nil }
            -#    = vote_numbers(comment, current_user)