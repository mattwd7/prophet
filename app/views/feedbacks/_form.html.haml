.feedback-form
  = form_for Feedback.new, as: :feedback, url: feedbacks_path, remote: true do |f|
    = f.hidden_field(:author_id, value: current_user.id)
    %table.top
      %tr
        %td
          .avatar
            = image_tag current_user.avatar.url(:large)
        %td
          .content
            = f.text_area :content, placeholder: 'Send a teammate feedback (@MatthewDick ...) or make a self-observation (@' + @user_name + ' ...)'
    .bottom
      = text_area_tag :peers, '', placeholder: 'Tag peers (@TonyDeCino, @Matthew Dick)...'
      .submit-tag Send